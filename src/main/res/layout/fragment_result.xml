<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ru.omdroid.aptitude.Result$PlaceholderFragment">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/txtRating"
            android:layout_centerHorizontal="true" android:textColor="#535454" android:textStyle="bold"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/txtNegative"
            android:layout_alignParentLeft="true" android:textColor="#535454"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/txtPositive"
            android:layout_alignParentRight="true" android:textColor="#535454"/>
    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView"
            android:layout_marginTop="10dp" android:layout_below="@+id/txtRating">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#535454"
                android:id="@+id/txtTest" android:paddingLeft="30dp" android:paddingRight="30dp"/>
    </ScrollView>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" android:layout_alignBottom="@+id/scrollView"
            android:layout_marginBottom="10dp">
        <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:id="@+id/img1"
                android:src="@drawable/shape_circle"/>
        <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:id="@+id/img2"
                android:src="@drawable/shape_circle"/>
        <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:id="@+id/img3"
                android:src="@drawable/shape_circle"/>
        <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:id="@+id/img4"
                android:src="@drawable/shape_circle"/>
        <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:id="@+id/img5"
                android:src="@drawable/shape_circle"/>
        <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:id="@+id/img6"
                android:src="@drawable/shape_circle"/>
        <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:id="@+id/img7"
                android:src="@drawable/shape_circle"/>
        <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:id="@+id/img8"
                android:src="@drawable/shape_circle"/>
        <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:id="@+id/img9"
                android:src="@drawable/shape_circle"/>
        <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:id="@+id/img10"
                android:src="@drawable/shape_circle"/>

    </LinearLayout>

</RelativeLayout>
